# CONFIGURAÇÃO SPA PARA REACT ROUTER
<IfModule mod_rewrite.c>
  # Habilitar RewriteEngine
  RewriteEngine On

  # Define o diretório base
  RewriteBase /

  # Define index.html como documento padrão
  DirectoryIndex index.html

  # Desabilita MultiViews (importante para SPA)
  Options -MultiViews

  # REGRA 1: Se é um arquivo ou diretório real, serve direto
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # REGRA 2: Se não for arquivo/diretório, redireciona para index.html
  RewriteRule ^(.*)$ /index.html [L,QSA]
</IfModule>

# FALLBACK: Se mod_rewrite não estiver disponível (LiteSpeed)
<IfModule !mod_rewrite.c>
  ErrorDocument 404 /index.html
</IfModule>

# COMPRESSÃO GZIP (otimização extra)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# CACHE DE ASSETS (otimização extra)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>
