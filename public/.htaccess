# SPA Rerouting - v12.5 (PHP Fallback)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Se o arquivo existir fisicamente, entregue ele
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Se o diretório existir, entregue ele
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Para todo o resto: tenta index.html
    RewriteRule ^ /index.html [L]
</IfModule>

# Fallback para quando mod_rewrite não funcionar
# Usa PHP como última opção
ErrorDocument 404 /404.php
ErrorDocument 403 /404.php
